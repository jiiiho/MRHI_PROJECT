<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE configuration
  PUBLIC "-//mybatis.org//DTD Config 3.0//EN"
  "http://mybatis.org/dtd/mybatis-3-config.dtd">
<configuration>
	<!-- Alias 설정 -->
	<typeAliases>
		<typeAlias alias="board" type="com.sushidoku.biz.board.BoardVO"/>
		<typeAlias alias="user" type="com.sushidoku.biz.user.UserVO"/>
		<typeAlias alias="inquiry" type="com.sushidoku.biz.inquiry.InquiryVO"/>
		<typeAlias alias="menu" type="com.sushidoku.biz.menu.MenuVO"/>
		<typeAlias alias="cart" type="com.sushidoku.biz.cart.CartVO"/>
		<typeAlias alias="payment" type="com.sushidoku.biz.payment.PaymentVO"/>
	</typeAliases>
	
	<!--  Sql Mapper 설정 -->
	<mappers>
		<mapper resource="mappings/board-mapping.xml" />
		<mapper resource="mappings/user-mapping.xml" />
		<mapper resource="mappings/inquiry-mapping.xml" />
		<mapper resource="mappings/menu-mapping.xml" />
		<mapper resource="mappings/cart-mapping.xml" />
		<mapper resource="mappings/payment-mapping.xml" />
	</mappers>
</configuration>
